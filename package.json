{
  "name": "halodao-amm-v2",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/HaloDAO/halodao-amm-v2",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "yarn reset && yarn test-local",
    "clean": "npx hardhat clean",
    "compile": "hardhat compile",
    "deploy:token": "ts-node scripts/cli/deployTokenCLI.ts",
    "deploy:pool": "ts-node scripts/cli/deployPoolCLI.ts",
    "deploy:fx-pool": "ts-node scripts/cli/deployFxPoolCLI.ts",
    "deploy:relayer": "ts-node scripts/cli/deployRelayerCLI.ts",
    "pool:add-liquidity": "ts-node scripts/cli/addLiquidityCLI.ts",
    "pool:remove-liquidity": "ts-node scripts/cli/removeLiquidityCLI.ts",
    "pool:swap": "ts-node scripts/cli/batchSwapCLI.ts",
    "swap:single": "ts-node scripts/cli/singleSwapCLI.ts",
    "verify": "npx hardhat run scripts/verifyContract.ts --network kovan",
    "verify2": "npx hardhat run scripts/verifyTwo.ts --network kovan",
    "reset": "yarn run clean && rm -rf node_modules && yarn install && yarn compile-fix",
    "node": "npx hardhat node",
    "test-local": "npx hardhat test tests/local/*.test.ts",
    "test-local:only-pool": "hardhat test tests/local/pool.test.ts",
    "test-local:simulate": "hardhat test tests/local/pool-simulation.test.ts",
    "typecheck": "yarn compile && tsc --noEmit",
    "recompile": "rm -rf artifacts && rm -rf cache && yarn compile-fix",
    "load-balancer-contracts": "sh scripts/shell/load-balancer-contracts.sh",
    "compile-fix": "TS_NODE_TRANSPILE_ONLY=1 npx hardhat compile",
    "bootstrap-local": "yarn hardhat run scripts/bootstrapLocal.ts --network localhost",
    "slither:fxpool": "slither contracts/FXPool.sol --solc-remaps @=node_modules/@"
  },
  "devDependencies": {
    "@balancer-labs/v2-deployments": "^1.1.1",
    "@halodao/halodao-contract-addresses": "^0.1.5",
    "@tenderly/hardhat-tenderly": "^1.0.12",
    "@types/chai": "^4.2.22",
    "@types/chai-almost": "^1.0.1",
    "@types/edit-json-file": "^1.6.1",
    "@types/faker": "^5.5.8",
    "@types/inquirer": "^7.3.3",
    "@types/lodash": "^4.14.176",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.32",
    "chai": "^4.3.4",
    "chai-almost": "^1.0.1",
    "faker": "^5.5.3",
    "hardhat": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-local-networks-config-plugin": "0.0.6",
    "mocha": "^7.2.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@balancer-labs/balancer-js": "^1.0.1",
    "@balancer-labs/v2-pool-utils": "^2.0.1",
    "@balancer-labs/v2-pool-weighted": "^2.0.1",
    "@balancer-labs/v2-solidity-utils": "^2.0.0",
    "@balancer-labs/v2-vault": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.2",
    "@openzeppelin/hardhat-upgrades": "^1.11.0",
    "@truffle/hdwallet-provider": "^1.5.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "bignumber.js": "^9.0.1",
    "decimal.js": "^10.3.1",
    "dotenv": "^10.0.0",
    "edit-json-file": "^1.6.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat-tracer": "^1.1.0-rc.6",
    "inquirer": "^8.2.0",
    "lodash": "^4.17.21",
    "open": "^8.3.0",
    "solidity-coverage": "^0.7.21",
    "truffle-plugin-verify": "^0.5.16",
    "typechain": "^5.2.0"
  }
}
